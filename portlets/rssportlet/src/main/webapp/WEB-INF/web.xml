<?xml version="1.0" encoding="ISO-8859-1"?>

<!DOCTYPE web-app
 PUBLIC "-//Sun Microsystems, Inc.//DTD Web Application 2.3//EN"
  "http://java.sun.com/dtd/web-app_2_3.dtd">

<web-app>
	<display-name>RSS Portlet</display-name>
	<description>
        This application is a portlet. It can not be used outside a portal.
	</description>

    <listener>
        <listener-class>org.gridlab.gridsphere.provider.portlet.jsr.PortletServlet</listener-class>
    </listener>

    <servlet>
        <servlet-name>PortletServlet</servlet-name>
        <servlet-class>org.gridlab.gridsphere.provider.portlet.jsr.PortletServlet</servlet-class>
    </servlet>

    <servlet-mapping>
       <servlet-name>PortletServlet</servlet-name>
       <url-pattern>/jsr/rssportlet</url-pattern>
    </servlet-mapping>

	<welcome-file-list>
		<welcome-file>index.html</welcome-file>
	</welcome-file-list>
    
