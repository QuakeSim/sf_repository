<?xml version="1.0"?>
<project name="RDAHMM" default="copy-all-to-portlet" basedir=".">

<target name="copy-all-to-portlet" depends="copy-rdahmm-to-portlet,copy-stfilter-to-portlet,copy-stationmonitor-to-portlet,copy-realtimerdahmm-to-portlet"/>

<target name="copy-rdahmm-to-portlet">
   <property name="rdahmm.dest.dir" value="./portlets/RDAHMM-portlet/"/>
   <property name="rdahmm.source.dir" value="./jsf_standalone/RDAHMM"/>
   <copy toDir="${rdahmm.dest.dir}"
         overwrite="true">
      <fileset dir="${rdahmm.source.dir}">
         <include name="**/*.java"/>
      </fileset>
      <fileset dir="${rdahmm.source.dir}">
         <include name="**/*.xml"/>
         <include name="**/*.class"/>
         <include name="**/*.jar"/>
         <include name="**/*.jsp"/>
         <include name="**/*.properties"/>
         <exclude name="pom.xml"/>
         <exclude name="**/web.xml"/>
      </fileset>
   </copy>
</target>

