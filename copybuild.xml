<?xml version="1.0"?>
<project name="RDAHMM" default="copy-all-to-portlet" basedir=".">

<target name="copy-all-to-portlet" depends="copy-rdahmm-to-portlet,copy-stfilter-to-portlet"/>

<target name="copy-rdahmm-to-portlet">
   <property name="rdahmm.dest.dir" value="./portlets/RDAHMM-portlet/"/>
   <property name="rdahmm.source.dir" value="./jsf_standalone/RDAHMM"/>
   <copy toDir="${rdahmm.dest.dir}"
         overwrite="true">
      <fileset dir="${rdahmm.source.dir}">
         <include name="**/*.java"/>
      </fileset>
      <fileset dir="${rdahmm.source.dir}">
         <include name="**/*.xml"/>
         <include name="**/*.class"/>
         <include name="**/*.jar"/>
         <include name="**/*.jsp"/>
         <include name="**/*.properties"/>
         <exclude name="pom.xml"/>
         <exclude name="**/web.xml"/>
      </fileset>
   </copy>
</target>

<target name="copy-stfilter-to-portlet">
   <property name="stfilter.dest.dir" value="./portlets/STFILTER-portlet/"/>
   <property name="stfilter.source.dir" value="./jsf_standalone/st_filter"/>
   <echo message="${stfilter.dest.dir}"/>
   <echo message="${stfilter.source.dir}"/>
   <copy toDir="${stfilter.dest.dir}"
         overwrite="true">
      <fileset dir="${stfilter.source.dir}">
         <include name="**/*.java"/>
      </fileset>
      <fileset dir="${stfilter.source.dir}">
         <include name="**/*.xml"/>
         <include name="**/*.class"/>
         <include name="**/*.jar"/>
         <include name="**/*.jsp"/>
         <include name="**/*.properties"/>
         <exclude name="pom.xml"/>
         <exclude name="**/web.xml"/>
      </fileset>
   </copy>
</target>
</project>