<?xml version="1.0"?>
<project name="Gnuplot" default="RunGnuplot" basedir=".">

<target name="MakeWorkDir">
   <echo message="Creating ${workDir.prop}" />
   <mkdir dir="${workDir.prop}" />
</target>

<target name="ExecGnuplot">
   <exec executable="${bindir.prop}/plot_plain.sh"
         dir="${bindir.prop}">
      <arg line="${GnuplotBaseName.prop}.input"/>
      <env key="PATH" path="${bindir.prop}:/bin/:/usr/bin/:$PATH"/>
   </exec>
   <move todir="${outputDestDir.prop}">
     <fileset file="*.png"/>
   </move>
</target>

<target name="RunGnuplot" depends="ExecGnuplot">
   <echo message="Gnuplot run completed"/>
</target>
</project>



