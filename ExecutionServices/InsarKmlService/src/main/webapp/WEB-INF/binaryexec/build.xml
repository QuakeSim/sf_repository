<?xml version="1.0"?>
<project name="Disloc" default="ExecDisloc" basedir=".">
  
  <target name="MakeWorkDir">
	 <echo message="Creating ${workDir.prop}" />
	 <mkdir dir="${workDir.prop}" />
  </target>

  <target name="CopyLogo" depends="MakeWorkDir">
	 <echo message="Copying logo from ${bindir.prop} to working directory ${workDir.prop}"/>
	 <copy file="${bindir.prop}/QuakeSimLogoGrayEmboss.png"
			 todir="${workDir.prop}"/>
    <copy file="${bindir.prop}/QuakeSimLogoGrayEmbossSmall.png"
			 todir="${workDir.prop}"/>
  </target>
  
  <target name="ExecInsarKml" depends="CopyLogo">
    <echo message="Bin directory: ${bindir.prop}"/>
    <exec executable="${bindir.prop}/SARImage.py" 
          output="${workDir.prop}/${projectName.prop}.stdout"
          error="${workDir.prop}/${projectName.prop}.stderr"
			 dir="${workDir.prop}">
      <arg line="${workDir.prop}/${projectName.prop}.output"/>
      <arg line="${elevation.prop}"/>
      <arg line="${azimuth.prop}"/>
      <arg line="${radarFrequency.prop}"/>
		<arg line="${outputImageUrl.prop}"/>
    </exec>
  </target>
  
</project>



