<?xml version="1.0"?>

<!DOCTYPE faces-config PUBLIC
  "-//Sun Microsystems, Inc.//DTD JavaServer Faces Config 1.0//EN"
  "http://java.sun.com/dtd/web-facesconfig_1_1.dtd" >

<faces-config>
	
	<managed-bean>
		<managed-bean-name>stfilterBean</managed-bean-name>
		<managed-bean-class>cgl.webservices.STFILTERBean</managed-bean-class>
		<managed-bean-scope>session</managed-bean-scope>
                <!-- These are execution host params -->
                <managed-property>
                   <property-name>gnuplotServiceUrl</property-name>
                   <value>
                     http://gf2.ucs.indiana.edu:8080/gnuplotexec/services/GnuplotExec
                   </value>
                </managed-property>

                <managed-property>
                   <property-name>analyzeTseriServiceUrl</property-name>
                   <value>
                     http://gf2.ucs.indiana.edu:8080/analyze-tseri-exec/services/AnalyzeTseriExec
                   </value>
                </managed-property>

                <managed-property>
                   <property-name>binPath</property-name>
                   <value>/home/gateway/GEMCodes/stfilter/</value>
                </managed-property>

                <managed-property>
                   <property-name>baseWorkDir</property-name>
                   <value>/home/gateway/GNUPLOT_WDIR</value>
                </managed-property>

	</managed-bean>
	
	<!-- navigation rules for Main.jsp -->
	<navigation-rule>
		<from-view-id>/allstations.jsp</from-view-id>
		<navigation-case>
			<from-outcome>plot-time-series</from-outcome>
			<to-view-id>/PlotTimeSeries.jsp</to-view-id>
		</navigation-case>
	</navigation-rule>	
	<navigation-rule>
		<from-view-id>/PlotTimeSeries.jsp</from-view-id>
		<navigation-case>
			<from-outcome>back-to-main</from-outcome>
			<to-view-id>/allstations.jsp</to-view-id>
		</navigation-case>
	</navigation-rule>	
</faces-config>